#!/bin/sh

ooo="none"
if [ $# > 1 ]; then
  ooo=$1
fi

if [ "$ooo" = "on" ] ; then
  cp ~/.asoundrc.bak ~/.asoundrc
  xset -dpms
  xset s off
  xrandr --output LVDS1 --off --output HDMI1 --auto
  urxvt -e sh -c 'echo "alsactl restore"; su -c "alsactl restore"' &
elif [ "$ooo" = "off" ] ; then
  rm ~/.asoundrc
  xset +dpms
  xset s on
  xrandr --output LVDS1 --auto --output HDMI1 --off
  urxvt -e sh -c 'echo "alsactl restore"; su -c "alsactl restore"' &
else
  echo "usage $0 {on,off}"
  echo "  turns hdmi output on or off"
fi
